@model TicketDto

<form asp-action="TicketDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Ticket</h1>
        <input asp-for="TicketId" hidden />

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Ticket Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="TicketCode" disabled class="form-control" />

            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Ticket Price</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="TicketPrice" disabled class="form-control" />

            </div>
            <div class="col-5 offset-2">
                <a asp-action="TicketIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>


