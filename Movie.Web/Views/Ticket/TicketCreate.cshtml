@model TicketDto

<form asp-action="TicketCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Create a Ticket</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Ticket Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="TicketCode" class="form-control" />
                <span asp-validation-for="TicketCode" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Ticket Price</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="TicketPrice" class="form-control" />
                <span asp-validation-for="TicketPrice" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="TicketIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}